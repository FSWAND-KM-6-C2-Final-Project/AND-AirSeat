<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Menyesuaikan dengan radius yang sama -->
            <solid android:color="@color/transparent" /> <!-- Warna latar belakang saat disabled -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Menyesuaikan dengan radius yang sama -->
            <solid android:color="@color/md_theme_primary" /> <!-- Warna latar belakang saat di-hover -->
        </shape>
    </item>
</selector>
