<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/tv_airport_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/font_plusjakartasans_bold"
        android:layout_marginVertical="4dp"
        android:gravity="center_vertical"
        tools:text="Jakarta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_cross"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/iv_cross"
        android:layout_width="32dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_gray_cross"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/tv_airport_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
