<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title_empty_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/text_login_protection"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/iv_login_protection"
        app:layout_constraintEnd_toEndOf="@+id/iv_login_protection"
        app:layout_constraintStart_toStartOf="@+id/iv_login_protection" />

    <ImageView
        android:id="@+id/iv_login_protection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_login_protection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="56dp"
        android:text="@string/text_button_login_protection"
        android:textColor="@color/md_theme_onPrimary"
        android:backgroundTint="@color/md_theme_primary"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_login_protection" />

</androidx.constraintlayout.widget.ConstraintLayout>