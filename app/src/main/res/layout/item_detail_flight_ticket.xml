<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="8dp"
    card_view:strokeColor="@color/md_theme_primary"
    card_view:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_departure_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_depart_time"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_departure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Departure"
                android:textAlignment="textEnd"
                android:textSize="18sp"
                android:textColor="@color/md_theme_primary"
                android:textStyle="bold" />
        </LinearLayout>
        
        <TextView
            android:id="@+id/tv_departure_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="3 Agustus 2024"
            android:textSize="18sp"
            android:layout_marginVertical="4dp"/>

        <TextView
            android:id="@+id/tv_departure_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Soekarno Hatta - Terminal 3 Internasional"
            android:textSize="18sp"
            android:layout_marginVertical="4dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="8dp"
            android:background="@android:color/darker_gray"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_airline_logo"
                android:layout_width="36dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_logo_plane"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_airline_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Garuda Indonesia"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:layout_marginVertical="2dp"/>

                <TextView
                    android:id="@+id/tv_airline_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="GA-132"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/img_information_logo"
                android:layout_width="36dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_information_logo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Information: "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/tv_flight_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Direct Flight"
                    android:textSize="18sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/tv_baggage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Baggage 20 kg"
                    android:textSize="18sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/tv_cabin_baggage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Cabin Baggage 7 kg"
                    android:textSize="18sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/tv_entertainment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="In Flight Entertainment"
                    android:textSize="18sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginVertical="2dp"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="8dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_arrival_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_arrival_time"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_arrival"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Arrival"
                android:textAlignment="textEnd"
                android:textSize="18sp"
                android:textColor="@color/md_theme_primary"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_arrival_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="3 Agustus 2024"
            android:textSize="18sp"
            android:layout_marginVertical="4dp"/>

        <TextView
            android:id="@+id/tv_arrival_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Melbourne International Airport"
            android:textSize="18sp"
            android:layout_marginVertical="4dp"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>