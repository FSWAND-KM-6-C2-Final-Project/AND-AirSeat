<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.flightdetail.FlightDetailActivity">

    <LinearLayout
        android:id="@+id/ll_flight_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_primary"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/ib_btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/btn_back" />

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:text="@string/flight_detail"
            android:textColor="@color/md_theme_onPrimary"
            android:textSize="18sp" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@id/cv_section_checkout"
        app:layout_constraintTop_toBottomOf="@id/ll_flight_detail">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.nafi.airseat.presentation.common.views.ContentStateView
                android:id="@+id/csv_detail_flight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"/>

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/pb_loading_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_marginTop="200dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_detail_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_departure_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp"
                    android:textColor="@color/md_theme_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Jakarta" />

                <ImageView
                    android:id="@+id/img_arrow_right"
                    android:layout_width="40dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="2dp"
                    android:layout_marginHorizontal="8dp"
                    app:layout_constraintStart_toEndOf="@id/tv_departure_place"
                    app:layout_constraintTop_toTopOf="@id/tv_departure_place"
                    app:layout_constraintBottom_toBottomOf="@id/tv_departure_place"/>

                <TextView
                    android:id="@+id/tv_arrival_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="24dp"
                    android:textColor="@color/md_theme_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/img_arrow_right"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Melbourne" />

                <TextView
                    android:id="@+id/flight_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/tv_arrival_place"
                    app:layout_constraintTop_toTopOf="@id/tv_arrival_place"
                    tools:text="(4h 0m)" />

                <include
                    android:id="@+id/layout_flight_info"
                    layout="@layout/layout_flight_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="8dp"
                    app:layout_constraintTop_toBottomOf="@id/flight_time" />

                <TextView
                    android:id="@+id/tv_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="12dp"
                    android:text="@string/detail_price"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_flight_info" />

                <include
                    android:id="@+id/layout_price"
                    layout="@layout/layout_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_detail_price" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/cv_section_checkout"
        layout="@layout/section_checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>