<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".presentation.bottomsheetcalendar.BottomSheetCalendarFragment">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/dhv_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_calendar" />

    <LinearLayout
        android:id="@+id/ll_calendar"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/dhv_pass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/exFourAppBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:paddingTop="2dp"
                android:paddingEnd="14dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/exFourStartDateText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:gravity="start|center_vertical"
                    android:minLines="2"
                    android:textColor="@color/md_theme_outline"
                    android:textSize="26sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/exFourHeaderDivider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Mon\n22 Apr" />

                <View
                    android:id="@+id/exFourHeaderDivider"
                    android:layout_width="1.5dp"
                    android:layout_height="0dp"
                    android:background="#EAEAEA"
                    android:rotation="45"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/exFourEndDateText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:gravity="end|center_vertical"
                    android:minLines="2"
                    android:textColor="@color/md_theme_outline"
                    android:textSize="26sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/exFourHeaderDivider"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Thu\n9 May" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include
                android:id="@+id/legendLayout"
                layout="@layout/layout_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

        </com.google.android.material.appbar.AppBarLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.kizitonwose.calendar.view.CalendarView
                android:id="@+id/exFourCalendar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="80dp"
                app:cv_orientation="vertical"
                app:cv_scrollPaged="true"
                android:visibility="visible"
                app:cv_dayViewResource="@layout/item_day"
                app:cv_monthHeaderResource="@layout/item_header_calendar" />



        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_calendar">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            android:elevation="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/text_save"
                android:textSize="18sp"
                app:cornerRadius="12dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="@color/md_theme_primary"
                android:layout_marginTop="16dp"
                android:layout_gravity="bottom"/>
        </FrameLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
