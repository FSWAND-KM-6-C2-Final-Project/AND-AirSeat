<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.DetailNotificationActivity">

    <ImageView
        android:id="@+id/iv_background_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/md_theme_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_arrow_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_background_top"
        app:layout_constraintStart_toStartOf="@+id/iv_background_top"
        app:layout_constraintTop_toTopOf="@+id/iv_background_top" />

    <TextView
        android:id="@+id/tv_title_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/md_theme_onPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/iv_background_top"
        app:layout_constraintStart_toEndOf="@+id/iv_arrow_back"
        app:layout_constraintTop_toTopOf="@+id/iv_background_top"
        tools:text="Type Notification" />

    <TextView
        android:id="@+id/tv_date_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/material_dynamic_neutral70"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_background_top"
        tools:text="20 Maret , 14.00" />

    <TextView
        android:id="@+id/tv_content_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_notification"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/tv_term_and_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/material_dynamic_neutral70"
        app:layout_constraintEnd_toEndOf="@+id/tv_content_notification"
        app:layout_constraintTop_toBottomOf="@+id/tv_content_notification"
        android:layout_marginTop="12dp"
        android:text="Term and Service Required" />

</androidx.constraintlayout.widget.ConstraintLayout>