<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_info_passenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginVertical="2dp"
        android:textColor="@color/md_theme_primary"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/text_title_passenger" />

    <TextView
        android:id="@+id/tv_passenger_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="2dp"
        android:textColor="@color/md_theme_primary"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tv_info_passenger"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Mr." />

    <TextView
        android:id="@+id/tv_passenger_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="2dp"
        android:textColor="@color/md_theme_primary"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tv_passenger_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Harry" />

    <TextView
        android:id="@+id/tv_passenger_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="2dp"
        android:textColor="@color/md_theme_primary"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tv_passenger_first_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Potter" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tv_info_passenger"
        app:layout_constraintTop_toBottomOf="@id/tv_info_passenger"
        android:text="@string/text_title_passenger_id" />

    <TextView
        android:id="@+id/tv_id_passenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="2dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tv_id"
        app:layout_constraintTop_toBottomOf="@id/tv_info_passenger"
        tools:text="1234567" />

</androidx.constraintlayout.widget.ConstraintLayout>