<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.splashscreen.SplashScreenActivity">

    <ImageView
        android:id="@+id/iv_logo_app"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_logo_android"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Air Seat"
        android:textColor="@color/md_theme_primary"
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/font_plusjakartasans_bold"
        app:layout_constraintTop_toBottomOf="@id/iv_logo_app"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>